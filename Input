    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Rater</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f8ff; /* Light blue background */
            color: #333;
            margin: 0;
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }
        h1 {
            text-align: center;
            color: #ff6347; /* Tomato red */
        }
        section {
            background-color: #fffacd; /* Lemon chiffon */
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }
        form {
            display: grid;
            gap: 10px;
        }
        label {
            font-weight: bold;
            color: #4682b4; /* Steel blue */
        }
        input, select {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f5f5f5;
        }
        button {
            background-color: #32cd32; /* Lime green */
            color: white;
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #228b22; /* Darker green */
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background-color: #ffe4b5; /* Moccasin */
            border: 1px solid #ddd;
