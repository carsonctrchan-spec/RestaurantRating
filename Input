<body>
    <h1>Restaurant Rater & Shortlist</h1>

    <!-- Rated Restaurants Section -->
    <section>
        <h2 style="color: #ff6347;">Rate a Restaurant</h2>
        <form id="ratingForm">
            <label for="name">Restaurant Name:</label>
            <input type="text" id="name" required>

            <label for="location">Location:</label>
            <input type="text" id="location" required>

            <label for="region">Region:</label>
            <input type="text" id="region" required>

            <label for="food">Food (1-5):</label>
            <select id="food" required>
                <option value="">Select</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <label for="environment">Environment (1-5):</label>
            <select id="environment" required>
                <option value="">Select</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <label for="price">Price (1-5):</label>
            <select id="price" required>
                <option value="">Select</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <button type="submit">Add Rating</button>
        </form>

        <h2 style="color: #ff6347;">Rated Restaurants</h2>
        <ul id="ratedList"></ul>
    </section>

    <!-- Shortlist Section -->
    <section>
        <h2 style="color: #ff6347;">Shortlist a Restaurant</h2>
        <form id="shortlistForm">
            <label for="shortName">Restaurant Name:</label>
            <input type="text" id="shortName" required>

            <label for="shortLocation">Location:</label>
            <input type="text" id="shortLocation" required>

            <label for="shortRegion">Region:</label>
            <input type="text" id="shortRegion" required>

            <button type="submit">Add to Shortlist</button>
        </form>

        <h2 style="color: #ff6347;">Shortlist</h2>
        <ul id="shortlist"></ul>
    </section>

    <!-- Clear Data Button -->
    <button class="clear-btn" onclick="clearData()">Clear All Data</button>

    <script>
        // Load data from localStorage
        function loadData() {
            const rated = JSON.parse(localStorage.getItem('ratedRestaurants')) || [];
            const short = JSON.parse(localStorage.getItem('shortlist')) || [];

            const ratedList = document.getElementById('ratedList');
            ratedList.innerHTML = '';
            rated.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `<strong>${item.name}</strong> (${item.location}, ${item.region})<br>Food: ${item.food}/5 | Environment: ${item.environment}/5 | Price: ${item.price}/5`;
                ratedList.appendChild(li);
            });

            const shortList = document.getElementById('shortlist');
            shortList.innerHTML = '';
            short.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `<strong>${item.name}</strong> (${item.location}, ${item.region})`;
                shortList.appendChild(li);
            });
        }

        // Rating Form Submit
        document.getElementById('ratingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const rated = JSON.parse(localStorage.getItem('ratedRestaurants')) || [];
            const newRating = {
                name: document.getElementById('name').value,
                location: document.getElementById('location').value,
                region: document.getElementById('region').value,
                food: document.getElementById('food').value,
                environment: document.getElementById('environment').value,
                price: document.getElementById('price').value
            };
            rated.push(newRating);
            localStorage.setItem('ratedRestaurants', JSON.stringify(rated));
            loadData();
            this.reset();
        });

        // Shortlist Form Submit
        document.getElementById('shortlistForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const short = JSON.parse(localStorage.getItem('shortlist')) || [];
            const newShort = {
                name: document.getElementById('shortName').value,
                location: document.getElementById('shortLocation').value,
                region: document.getElementById('shortRegion').value
            };
            short.push(newShort);
            localStorage.setItem('shortlist', JSON.stringify(short));
            loadData();
            this.reset();
        });

        // Clear Data
        function clearData() {
            if (confirm('Are you sure? This will delete all ratings and shortlist.')) {
                localStorage.removeItem('ratedRestaurants');
                localStorage.removeItem('shortlist');
                loadData();
            }
        }

        // Initial Load
        loadData();
    </script>
</body>
</html>
